<a{% for attr, value  in options %} {{ attr }}="{{ value }}"{% endfor %}>
    <span class="right">
        {% if sorted %}
            {% if direction == 'desc' %}
                <i class="material-icons">expand_more</i>
            {% else %}
                <i class="material-icons">expand_less</i>
            {% endif %}
        {% else %}
            <i class="material-icons">unfold_more</i>
        {% endif %}
    </span>
    {{ title }}
</a>
