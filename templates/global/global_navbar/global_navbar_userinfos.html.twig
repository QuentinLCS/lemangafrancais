{% if app.user %}
    <div class="user-view">
        <a href="{{ path('users.show', {id: app.user.id}) }}">
            <div class="background">
                <img src="{{ asset('media/news/news_image_4.png') }}" height="160px" alt="BackGround image">
            </div>
            <img class="circle" src="{{ app.user.utiAvatarNomFichier ? vich_uploader_asset(app.user, 'utiAvatarFichier') : "/media/users/avatar/default.jpg" | imagine_filter('avatar') }}" alt="Profil picture">
            <span class="name black-text">{{ app.user.id }}</span>
            <span class="email black-text">{{ app.user.utiMail }}</span>
        </a>
    </div>
{% endif %}