<form method="post" action="{{ path('admin.application.delete', {jobId:application.recrutement.id, slug: application.recrutement.slug, id:application.id}) }}" style="display: inline-block;" class="no-padding">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ application.id) }}">
    <button class="btn red darken-4 waves-effect waves-light tooltipped" data-position="top" data-tooltip="Supprimer"><i class="material-icons white-text">delete</i></button>
</form>