{% extends 'base.html.twig' %}

{% block title 'LeMangaFrancais | Sc√©narios' %}

{% block body %}
    <div class="grey lighten-4 center">
        <h1></h1>
        <div class="row">
            <div class="col l7 offset-l1">
                <div class="section left-align">
                    <h4><b>{{  manga.manTitre }}</b></h4>
                    <div class="divider"></div>
                </div>
                <div class="white z-depth-3 rounded section big-margin-bottom">
                    <div class="row">
                        <div class="col l4 margin-top">
                            <a class="waves-effect waves-light btn"><i class="material-icons left">keyboard_arrow_left</i>PRECEDENT</a>
                        </div>
                        <div class="col l4 input-field margin-top">
                            <select>
                                <option value="1">Page 1</option>
                                <option value="2">Page 2</option>
                                <option value="3">Page 3</option>
                            </select>
                        </div>
                        <div class="col l4 margin-top">
                            <a class="waves-effect waves-light btn">SUIVANT<i class="material-icons right">keyboard_arrow_right</i></a>
                        </div>
                    </div>
                    <img src="{{ '/media/illustrations/default.png' | imagine_filter('illustration_page') }}" alt="Image Article" class=" margin-top margin-bottom z-depth-3" style=" height: 85%; width: 85%;">
                </div>
            </div>
            <div class="col l3">
                <div class="section left-align">
                    <h4 class="left-align">Informations</h4>
                    <div class="divider"></div>
                </div>
                <div class="white z-depth-3 rounded section margin-bottom">
                    <h4>Auteur</h4>
                    <div class="divider"></div>
                    {% for utilisateur in manga.utilisateur %}
                        <h5></h5>
                        <img src="{{utilisateur.UtiAvatarFichier ? vich_uploader_asset(app.user, 'utiAvatarFichier') : "/media/users/avatar/default.jpg" | imagine_filter('avatarsmall') }}" alt="" class="circle" style="width: 150px; height: 150px">
                        <h5><b>{{ utilisateur.id }}</b></h5>
                        {% for role in utilisateur.utiroles %}
                            <span class="grey-text">{{ role.rolNom }}</span>
                        {% endfor %}
                        <p class="margin-right margin-left"><b>Biographie :</b><br>{{ utilisateur.UtiBiographie }}</p>
                        <div class="divider"></div>
                    {% endfor %}
                    <p><b>Date de publication : </b>{{  manga.manDateCreation }}<br>
                        <b>Pages : </b>3 <br>
                        <b>Type : </b>Soupe <br>
                    </p>
                    <p><b>Tags : </b>Horreur / Fantaisie</p>
                </div>
                <div class="white z-depth-3 rounded section margin-bottom">
                    <h4>Synopsis</h4>
                    <div class="divider"></div>
                    <p style="padding: 5%">{{ manga.manContenu | raw}}</p>
                </div>
            </div>
        </div>
    </div>
{% endblock %}